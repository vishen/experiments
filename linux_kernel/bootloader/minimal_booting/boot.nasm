; Since the binary generated by the assembly code fulfills the requirements of the boot sector
; the origin is set to 0x7c00 and we end with the magic sequence
; MBR -> https://en.wikipedia.org/wiki/Master_boot_record

; Taken from: https://0xax.gitbooks.io/linux-insides/Booting/linux-bootstrap-1.html

[BITS 16]
[ORG  0x7c00]

boot:
    mov al, '!'
    mov ah, 0x0e
    mov bh, 0x00
    mov bl, 0x07

    int 0x10
    jmp $

times 510-($-$$) db 0

db 0x55
db 0xaa
